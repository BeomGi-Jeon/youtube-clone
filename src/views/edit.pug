extends base.pug

block content
    .edit(style="flex-direction:column; justify-content:center; align-items:center; display:flex;")
        h4(style="margin-bottom:20px;") Update Video
        form(method="POST")
            .upload-inputbox
                span(style="line-height:0; color:#666;") #Title
                input(name="title", placeholder="Video Title", type="text", value=video.title, required,maxlength="10")
                span(style="line-height:0; color:#666;") #Description
                input(placeholder="Description", required, type="text", name="description", minlength="2", value=video.description)
                span(style="line-height:0; color:#666;") #Hashtags
                input(placeholder="Hashtags, separated by comma.", required, type="text", name="hashtags", value=video.hashtags.join())
                input(value="Save",type="submit")